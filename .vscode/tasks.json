{
	"version": "2.0.0",
	"tasks":
	[
		{
			"args": [],
			"type": "shell",
			"label": "make",
			"group": "build",
			"linux" : 
			{
				"command": "make ${input:make}"
			},
			"windows" : 
			{
				"command": "msbuild ${input:msbuild}"
			},
			"presentation": 
			{
				"echo": false,
				"clear": true,
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
			}
		},
		{
			"args": [],
			"type": "shell",
			"group": "build",
			"label": "gnuplot",
			"command": "gnuplot -p -e ${input:gnuplot 1} -e ${input:gnuplot 2} ${file}",
			"presentation": 
			{
				"echo": true,
				"clear": true,
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true
			}
		}
	],
	"inputs": [
		{
			"id": "make",
			"default": "run m=r",
			"type": "promptString",
			"description": "Make:"
		},
		{
			"id": "msbuild",
			"type": "pickString",
			"description": "MSBuild:",
			"options": 
			[
				"/property:Configuration=Debug", 
				"/property:Configuration=Release", 
				"/property:Configuration=Debug /target:Clean", 
				"/property:Configuration=Release /target:Clean", 
				"/property:Configuration=Debug; dist/x64/Debug/Stability.exe", 
				"/property:Configuration=Release; dist/x64/Release/Stability.exe"
			]
		},
		{
			"id": "gnuplot 1",
			"default": "index_1=1",
			"type": "promptString",
			"description": "gnuplot index 1:"
		},
		{
			"id": "gnuplot 2",
			"default": "index_2=1",
			"type": "promptString",
			"description": "gnuplot index 2:"
		},
	]
}